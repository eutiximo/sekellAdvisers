    div.content
        div.row
            div.col-12.col-sm-6.col-md-5.col-lg-6
                div.d-block.w-12.w-sm-10
                picture.d-block.w-12.w-sm-10.w-md-7
                    source(class="w-100" srcset="media/images/photo-01.jpg" media="(max-width:767px)")
                    source(class="w-100" srcset="media/images/pagina_web-22.png" media="(min-width:768px)")
                    img(src="media/images/pagina_web-22.png" alt="...").w-100
                br
                
                div.d-block.w-11.w-md-10.mx-auto(resp="sm,md,lg" transfer="#sec4 .container > .row:eq(0) > div:eq(0) div[resp]")
