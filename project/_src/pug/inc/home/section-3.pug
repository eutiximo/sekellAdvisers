                    br
                    
            div.col-12.col-sm-6.col-md-7.col-lg-6
                h1.text-center.text-uppercase.fw900
                    span.text-silver #{i18n["home.sec3.title1.label1"].en_US} 
                    span.text-carbon=i18n["home.sec3.title1.label2"].en_US
                br
                
                div.d-block.w-11.w-md-10.mx-auto
                    p.h4.text-uppercase.text-center #{i18n["home.sec3.text2.label1"].en_US} <b class="text-carbon">#{i18n["home.sec3.text2.label2"].en_US}</b> #{i18n["home.sec3.text2.label3"].en_US}
                    br
                    
                    ul
                        li: p=i18n["home.sec3.list1.label1"].en_US
                        li: p=i18n["home.sec3.list1.label2"].en_US
                        li: p=i18n["home.sec3.list1.label3"].en_US
                        li: p=i18n["home.sec3.list1.label4"].en_US
                        li: p=i18n["home.sec3.list1.label5"].en_US